<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/xc_layout_detail_top_image" />

    <include layout="@layout/xc_layout_detail_author" />

    <com.huijimuhe.commonlayout.widget.NoScrollRecyclerView
        android:id="@+id/article_content_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0dip"
        android:overScrollMode="never"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <include layout="@layout/xc_layout_section_score" />

    <include layout="@layout/xc_layout_detail_recommend" />

    <include layout="@layout/xc_layout_detail_poi" />
</LinearLayout>