<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/xc_toolbar_height"
    android:minHeight="@dimen/xc_toolbar_height">

    <ImageView
        android:id="@+id/toolbar_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="?colorPrimary" />

    <android.support.v7.widget.Toolbar
        android:id="@id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:padding="0.0dip"
        app:contentInsetEnd="0.0dip"
        app:contentInsetLeft="0.0dip"
        app:contentInsetRight="0.0dip"
        app:contentInsetStart="0.0dip"
        app:paddingEnd="0.0dip"
        app:paddingStart="0.0dip" />
</FrameLayout>