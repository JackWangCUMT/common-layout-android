<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10.0dip"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/xc_article_padding"
    android:paddingRight="@dimen/xc_article_padding">

    <com.huijimuhe.commonlayout.widget.CircularImageView
        android:id="@id/article_author_header"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_marginTop="13.0dip"
        android:contentDescription="@null"
        android:src="@android:drawable/ic_input_get" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.0dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@id/article_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:text="用户名"
            android:textSize="14.0sp" />

        <ImageView
            android:id="@+id/article_author_tag"
            android:layout_width="wrap_content"
            android:layout_height="14.0dip"
            android:layout_marginLeft="5.0dip"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@id/article_author_des"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginTop="5.0dip"
        android:singleLine="true"
        android:textColor="#ff979898"
        android:textColorHint="#ff979898"
        android:text="用户简介"
        android:textSize="10.0sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="11.0dip"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/article_intro"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14.0dip"
        android:lineSpacingExtra="6.0dip"
        android:textColor="#ff686767"
        android:text="文章的短暂简介"
        android:textSize="15.0sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="14.0dip"
        android:background="@color/divider" />
</LinearLayout>