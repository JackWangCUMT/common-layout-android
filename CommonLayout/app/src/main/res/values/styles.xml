<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
    </style>
    <!--鲜城-->
    <style name="TabItem" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_margin">18dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="titleColor">@drawable/xc_selector_tab_text_color</item>
        <item name="titleNormalTextSize">16sp</item>
        <item name="titleSelectedTextSize">17sp</item>
        <!--<item name="titleDivider">@drawable/xc_shape_tab_divider</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
